<%= enabled_field(object) %>
<% if(object.supports_trigger?) %>
  <table>
    <tr>
      <td>Change detection</td>
      <td>
        Polling: <%= radio_button_tag("scm[#{object.class.name}][uses_polling]", "1", object.uses_polling?, :id=>nil) %>
        Trigger: <%= radio_button_tag("scm[#{object.class.name}][uses_polling]", "0", !object.uses_polling?, :id=>nil) %>
      </td>
    </tr>
  </table>
<% end %>
