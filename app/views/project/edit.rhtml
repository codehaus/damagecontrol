<table>
  <tr>
    <td><%= tab_link("General", "wrench", "project", "toplevelTabIds") %></td>
    <td><%= tab_link("Source Control", "safe", "scms", "toplevelTabIds") %></td>
    <td><%= tab_link("Publishers", "megaphone", "publishers", "toplevelTabIds") %></td>
