<html>
<%
message = nil
if(@build.successful?)
  message = "#{@build.revision.project.name}: #{@build.status_message} build (by #{@build.revision.developer})"
else
  message = "#{@build.revision.project.name}: #{@build.revision.developer} broke the build"
end
%>
<h1><%= message %></h1>
<h2>Changed files:</h2>
<ul>
<% @build.revision.each do |file| %>
  <li><%= file.path %></li>
<% end %>
</ul>
</html>