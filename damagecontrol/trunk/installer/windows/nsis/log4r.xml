  <outputter name="email" type="EmailOutputter" level="ERROR">
    <server>beaver.codehaus.org</server>
    <port>25</port>
    <domain>builds.codehaus.org</domain>
    <from>damagecontrol@builds.codehaus.org</from>
    <to>tirsen@codehaus.org</to>
    <subject>DamageControl Error</subject>
    <immediate_at>FATAL,ERROR</immediate_at>
  </outputter>
  -->
  
  <!-- loggers -->
  
  <logger name="DamageControl">
    <level>INFO</level>
    <outputter>file</outputter>
    <outputter>stdout</outputter>
    <outputter>stderr</outputter>
    <!--
