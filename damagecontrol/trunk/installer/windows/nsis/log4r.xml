<!-- the config file used by xmlconfig.rb -->
<log4r_config>
  <pre_config>
    <global level="DEBUG"/>
    <!-- rootdir is the root directory of the server, defined at runtime -->
    <!-- logdir is also defined at runtime and is usually #{logdir}/log -->
    <parameter name="logfile" value="#{logdir}/damagecontrol.log"/>
  </pre_config>

  <!-- outputters -->
  
  <outputter name="file" type="RollingFileOutputter" level="INFO">
    <filename>#{logfile}</filename>
    <!-- 24 hours in seconds -->
    <maxtime>86400</maxtime>
  </outputter>
  <outputter name="stdout" type="StdoutOutputter" level="INFO"/>
  <outputter name="stderr" type="StderrOutputter" level="ERROR"/>
