<input name="project" type="hidden" value="<%= self.class.name %>"/>

<table width="100%">
<tr>
  <td class="setting-name">Project name</td>
  <td width="75%">
    <% if nil %>
      <%= @project_name %>
      <input name="RSCM::Project[name]" type="hidden" value="<%= self.name %>"/>
    <% else %>
      <input class="setting-input" name="RSCM::Project[name]" type="text" value="<%= self.name %>"/>
    <% end %>
  </td>
</tr>
<tr>
  <td>&nbsp;</td>
  <td class="setting-description">
    The project name should not use space characters, as it will be used to create a folder on the DC server.
  </td>
</tr>
<tr>
  <td>Project description</td>
  <td><input class="setting-input" name="RSCM::Project[description]" type="text" value="<%= self.description %>"></td>
</tr>
<tr>
  <td>&nbsp;</td>
  <td class="setting-description">
    A short description of the project.
  </td>
</tr>
<tr>
  <td>Project home page</td>
  <td><input class="setting-input" name="RSCM::Project[home_page]" type="text" value="<%= self.home_page %>"></td>
</tr>
<tr>
  <td>Enable RSS generation</td>
  <td><input name="RSCM::Project[rss_enabled]" type="checkbox" <%= self.rss_enabled ? "checked=true" : "" %> /></td>
</tr>
</table>
