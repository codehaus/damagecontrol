<?xml version="1.0" encoding="utf-8"?>
<DamageControlMonitor xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://damagecontrol.codehaus.org">
  <PollingIntervalSeconds>15</PollingIntervalSeconds>
  <RemoteServerUrl>http://localhost:4712/public/xmlrpc</RemoteServerUrl>
  <ProjectName>ProjectName</ProjectName>
  <NotificationBalloon ShowBalloon="true" />
  <Sounds>
    <AnotherSuccessfulBuildSound Play="false" FileName="still-successful.wav" />
    <AnotherFailedBuildSound Play="false" FileName="still-failing.wav" />
    <BrokenBuildSound Play="false" FileName="broken.wav" />
    <FixedBuildSound Play="false" FileName="fixed.wav" />
  </Sounds>
  <Messages>
    <AnotherSuccess>
      <Message>Yet another succesful build!</Message>
    </AnotherSuccess>
    <AnotherFailure>
      <Message>The build is still broken...</Message>
    </AnotherFailure>
    <Fixed>
      <Message>Recent checkins have fixed the build.</Message>
    </Fixed>
    <Broken>
      <Message>Recent checkins have broken the build.</Message>
    </Broken>
  </Messages>
  <ShowExceptions>true</ShowExceptions>
</DamageControlMonitor>